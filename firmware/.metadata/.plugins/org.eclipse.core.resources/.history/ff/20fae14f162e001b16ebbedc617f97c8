#ifndef TESTS_INC_TEST_FRAMEWORK_HH_
#define TESTS_INC_TEST_FRAMEWORK_HH_

#include "main.h"

template <class T>
bool check_equal(T a, T b) {
	return a == b;
}

template <class T>
bool check_close(T a, T b, T margin) {
	return (a - b <= margin) || (b - a <= margin);
}

#endif /* TESTS_INC_TEST_FRAMEWORK_HH_ */
