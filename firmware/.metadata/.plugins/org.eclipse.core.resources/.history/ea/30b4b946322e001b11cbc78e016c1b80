#ifndef ENCODER_INC_ENCODER_HH_
#define ENCODER_INC_ENCODER_HH_

#include <stdint.h>


class Encoder {
private:
	uint16_t zero_angle_{0}; // value of the absolute zero angle, in degrees
	uint16_t angle_{0}; // value of the current absolute angle, in degrees

public:
	Encoder();

	/* Pure virtual functions: hardware-specific */
	virtual void Init(); // initialize the encoder
	virtual void Update(); // communicate with the encoder to read the new angle

	void set_zero_angle();
	void set_zero_angle(uint16_t new_zero_angle);
	uint16_t get_angle();

};


#endif /* ENCODER_INC_ENCODER_HH_ */
